<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.App.AnalyticsFragment"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Completed courses"
        android:fontFamily="@font/playfair_black"
        android:textColor="?colorSecondary"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_analytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deadlines"
        android:textSize="28sp"
        android:fontFamily="@font/playfair_black"
        android:textColor="?colorSecondary"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Security"
        android:textSize="22sp"
        android:fontFamily="@font/playfair_black"
        android:textColor="?colorOnSecondary"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due in x weeks"
        android:textSize="16sp"
        android:fontFamily="@font/playfair_reg"
        android:textColor="@color/red"
        />


</LinearLayout>